{% extends "base.html.twig" %}


{% block content %}
    <!-- Page content-->
    <div class="container">
        <div class="row">
            <!-- Blog entries-->
            <div class="col-lg-8">
                {% if posts is empty %}
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card mb-12 m-5">
                                <img class="card-img-top" src="https://dummyimage.com/700x350/dee2e6/6c757d.jpg" alt="..." />
                                <div class="card-body">
                                    <h3>Veuillez ajouter un nouvel article.</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Blog post-->
                            {% for post in posts %}
                            <div class="card mb-4">
                                <a href="/post/{{ post.id }}"><img class="card-img-top" src="https://dummyimage.com/700x350/dee2e6/6c757d.jpg" alt="..." /></a>
                                <div class="card-body">
                                    <div class="small text-muted">{{ post.createdAt|date("m/d/Y") }}</div>
                                    <h2 class="card-title h4">{{ post.title }}</h2>
                                    <p class="card-text">{{ post.content }}</p>
                                    <a class="btn btn-info" href="/mon-compte/mes-posts/modifier/{{ post.id }}">Modifier</a>
                                    <a class="btn btn-danger" href="/mon-compte/mes-posts/supprimer/{{ post.id }}">Supprimer</a>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                <!-- Pagination-->
                <nav aria-label="Pagination">
                    <hr class="my-0" />
                    <ul class="pagination justify-content-center my-4">
                        <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                        <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                        <li class="page-item"><a class="page-link" href="#!">2</a></li>
                        <li class="page-item"><a class="page-link" href="#!">3</a></li>
                        <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                        <li class="page-item"><a class="page-link" href="#!">15</a></li>
                        <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                    </ul>
                </nav>
            </div>
            <!-- Side widgets-->
            <div class="col-lg-4">
                <!-- Search widget-->
                <div class="card mb-4 justify-content-center">
                    <div class="card-header text-center">Ajouter Article</div>
                    <div class="card-body">
                        <div class="input-group justify-content-center">
                            <a class="btn btn-primary" href="/mon-compte/mes-posts/ajouter">Ajouter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}