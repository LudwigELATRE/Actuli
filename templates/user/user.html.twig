{% extends "base.html.twig" %}


{% block content %}
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            {% if user.roles == "ROLE_USER" %}
                                <h4>Utilisateur</h4>
                            {% else %}
                                <h4>Administrateur</h4>
                            {% endif %}
                            {% if userparam.0.sexe == "man" %}
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            {% elseif userparam.0.sexe == "woman" %}
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava4.webp" alt="avatar"
                                     class="rounded-circle img-fluid" style="width: 150px;">
                            {% elseif userparam.0.sexe == "other" %}
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava6.webp" alt="avatar"
                                     class="rounded-circle img-fluid" style="width: 150px;">
                            {% endif %}
                            <h5 class="my-3">{{ userparam.0.firstname }} {{ userparam.0.lastname }}</h5>
                            <p class="text-muted mb-1">{{ userparam.0.profile }}</p>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fa-brands fa-linkedin-in"></i>
                                    <p class="mb-0">https://www.linkedin.com/in/ludwig-elatre</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                                    <p class="mb-0">https://github.com/LudwigELATRE</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                                    <p class="mb-0">https://twitter/LudwigELATRE</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                    <p class="mb-0">https://instagram/LudwigELATRE</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                    <p class="mb-0">https://facebook/LudwigELATRE</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 d-flex flex-column justify-content-around">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Nom complet</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ userparam.0.firstname }} {{ userparam.0.lastname }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ userparam.0.email }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mobile</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ userparam.0.mobile }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Adresse</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ userparam.0.address }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                                <div class="col">
                                    <a type="button" class="btn btn-info" href="/mon-compte/profil" data-mdb-ripple-init>Modifier votre profil</a>
                                </div>
                                <div class="col">
                                    <a type="button" class="btn btn-info" href="/mon-compte/mes-posts" data-mdb-ripple-init>Voir mes post</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}